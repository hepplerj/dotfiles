[user]
    name = Jason Heppler
    email = jason.heppler@gmail.com

[github]
    user = hepplerj

[alias]
    l = "!source ~/.githelpers && prett_git_log"
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    st = status -s

    cl = clone

    ci = commit
    cm = commit -m
    cma = commit -a -m
    amend = commit --amend
    caa = commit -a --amend -C HEAD
    filelog = log -u
    fl = log -u

    ai = add --interactive

    co = checkout
    br = branch
    bra = branch -ra
    le = log --oneline --decorate
    dlc = diff --cached HEAD^
    dr = "|f() ( it diff "$1"^.."$1"; }; f"
    diffr = "|f() { git diff "$1"^.."$1"; }; f"
    branch = branch -ra

    #resent commands
    r = reset
    
    grep = grep -Ii
    gr = grep -Ii

    #merges
    ours = "!f() { git co --ours $@ && git add $@; }; f"
    theirs = "!f() { git co --theirs $@ && git add $@; }; f"

[color]
    ui = auto
        diff = auto
        status = auto
        branch = auto

[color "branch"]
    current = red reverse
    remote = green
    local = blue

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[push]
    default = current

[core]
    editor = vim
    excludesfile = ~/.gitignore
