# Markdown
snippet [ "["
[${1:text}](http://${2:address})
endsnippet

snippet [* "[*"
[$0](`!v @*`)
endsnippet

snippet []* "[]*"
[$0](`!v @*`)
endsnippet

snippet [: "[:"
[${1:id}]: http://${2:url} "${3:title}"
endsnippet

snippet [:* "[:*"
[${1:id}]: ${2:`!v @*`} "${3:title}"
endsnippet

snippet ![ "!["
![${1:alttext}](${2:/images/image.jpg})
endsnippet

snippet ![* "![*"
![${1:alt}](${2:`!v @*`})${3}
endsnippet

snippet ![: "![:"
![${1:id}]: ${2:url}
endsnippet

snippet ![:* "![:*"
![${1:id}]: ${2:`!v @*`}
endsnippet

snippet === "==="
`!v repeat('=', strlen(getline(line(".") - 1)))`
${1}
endsnippet

snippet --- "---"
`!v repeat('-', strlen(getline(line(".") - 1)))`
${1}
endsnippet

