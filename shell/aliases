# Bash Aliases

# Filesystem
alias ..='cd ..'            # Go up one directory
alias ...='cd ../..'        # Go up two directories
alias ....='cd ../../..'    # And for good measure
alias l='ls -Gl'           # Long view, show hidden
alias la='ls -aF'           # Compact view, show hidden
alias ll='ls -l'          # Long view, no hidden
alias ls='ls -F'

# Helpers
alias grep='grep --color=auto' # Always highlight grep search term
alias ping='ping -c 5'      # Pings with 5 packets, not unlimited
alias c='clear'

# Extras
alias bp='vim ~/.bash_profile'
alias cpu='top -o cpu -n 10'
alias chromeproof="open -a Google\ CHrome --args -incognito"
alias df="df -h"
alias f='open -a Finder ./'
alias h='history'
alias home='cd && clear'
alias newproject='ruby ~/src/newproject.rb'
alias mvim='open -a /Applications/MacVim.app'
alias mem='top -o rsize -n 10'
alias mutt='cd ~/Desktop && mutt'
alias o='open -a'
alias otask='ruby ~/src/otask/bin/otask'
alias rtt='/Users/hepplerj/src/Read2Text/read2text'
alias src='source ~/.bash_profile'
alias subl='sublime'
alias update='sudo softwareupdate -i -a; brew update; brew upgrade'
alias vrc='vim ~/.vimrc'
alias wiki='cd /Users/hepplerj/projects/research.dissertation/wiki $$ gitit'
alias zshconf='mvim ~/.zshrc'



# Git Aliases
alias g=git
alias ga='git add'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gl='git pull'
alias gp='git push'
alias gpa='git push --all'
alias gst='git status -sb'
alias gsd='git svn dcommit'
alias gsr='git svn rebase'
alias gs='git stash'
alias gsa='git stash apply'
alias gr='git stash && git svn rebase && git svn dcommit && git stash pop' # git refresh
alias gd='git diff | $GIT_EDITOR -'
alias gmv='git mv'
alias gho='$(git remote -v 2> /dev/null | grep github | sed -e "s/.*git\:\/\/\([a-z]\.\)*/\1/" -e "s/\.git$//g" -e "s/.*@\(.*\)$/\1/g" | tr ":" "/" | tr -d "\011" | sed -e "s/^/open http:\/\//g")'

