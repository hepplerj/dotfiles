{
    "workbench.statusBar.feedback.visible": false,
    "files.autoSave": "onWindowChange",
    "files.insertFinalNewline": true,
    "keyboard.dispatch": "keyCode",
    "editor.fontFamily": "SF Mono, IBM Plex Mono, PragmataPro, monospace",
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "editor.rulers": [80,120],
    "editor.snippetSuggestions": "top",
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "bounded",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 100,
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.colorTheme": "Default Light+",
    "workbench.fontAliasing": "auto",
    "workbench.iconTheme": "vscode-icons",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "welcomePage",
    "workbench.tree.indent": 16,
    "debug.console.fontFamily": "IBM Plex Mono, default",
    "go.formatTool": "gofmt",
    "git.enableCommitSigning": false,
    "git.enableSmartCommit": true,
    "vim.useSystemClipboard": false,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "K"
            ],
            "after": [
                "~"
            ]
        }
    ],
    "[markdown]": {
        "editor.wordWrap": "bounded"
    },
    "[html]": {
        "editor.wordWrap": "on",
        "editor.wordBasedSuggestions": false,
        "editor.selectionHighlight": false,
        "editor.occurrencesHighlight": false,
        "editor.formatOnSave": false,
        "editor.wordWrapColumn": 80,
    },
    "explorer.confirmDelete": false,
    "explorere.confirmDragAndDrop": false,
    "extensions.ignoreRecommendations": true,
    "explorer.confirmDragAndDrop": false,
    "editor.tabCompletion": "on",
    "go.docsTool": "gogetdoc",
    "editor.wordWrapColumn": 160,
    "search.useGlobalIgnoreFiles": true,
    "window.zoomLevel": 0,
    "git.confirmSync": false,
    "breadcrumbs.enabled": true,
    "markdown.format.wrapLineLength": 0,
    "cSpell.maxNumberOfProblems": 50,
    "javascript.implicitProjectConfig.experimentalDecorators": true,
    "files.eol": "\n",
    "files.exclude": {
        ".cache": true,
        ".Rhistory": true,
        ".Rproj.user": true,
        ".vscode/": true,
        "*.Rproj": true,
        "**/__pycache__": true,
        "build": true,
        "dist": true,
        "env/": true,
        "node_modules/": true,
        "process-photos": true,
        "public/": true,
        "staticfiles/": true
    },
    "html.format.endWithNewLine": true,
    "html.format.extraLiners": "head, body, main, section, article, header, footer, /html",
    "[html]": {
        "editor.wordWrap": "on",
        "editor.wordBasedSuggestions": false
    },
    "[markdown]": {
        "editor.formatOnSave": false,
        "editor.occurrencesHighlight": false,
        "editor.selectionHighlight": false,
        "editor.wordBasedSuggestions": false,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.defaultFormatter": "monofon.pandoc-format"
    },
    "pandoc-format.command": "pandoc -t markdown --atx-headers --standalone --wrap=none",
    "[plaintext]": {
        "editor.occurrencesHighlight": false,
        "editor.selectionHighlight": false,
        "editor.wordBasedSuggestions": false,
        "editor.wordWrap": "bounded"
    },
    "[python]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
    },
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ],
    "editor.renderControlCharacters": true
}
